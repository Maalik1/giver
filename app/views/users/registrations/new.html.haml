.row
  .col-sm-4.col-sm-offset-4
    .module
      .section
        %h3.top Register

        - unless resource.errors.messages.blank?
          = devise_error_messages!
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form", role: "form" }) do |f|
          - if @setup
            = render partial: 'setup', locals: { f: f }
          - else
            = render partial: 'user', locals: { f: f }
        
        %p= render "users/shared/links"